<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Contact</title>
      <link rel="stylesheet" href="css/contact.css">
      <link rel="icon" type="image/x-icon" href="image/Logo111.png" style="width: 50%; height: 50%;">

      <script type="text/javascript">
         $(document).ready(function(){
   
            $( "#form1" ).submit(function(event) {
               event.preventDefault();
   
               $.ajax({
                  type: 'POST',
                  url: '/contact',
                  data: $('#form3').serialize(),
                  dataType: "json",
                  success: function(response){
                     //alert("a");
                     //console.log(response.Success);
                     $('#form3')[0].reset();
   
                     document.getElementById("check").innerHTML=response.Success;
                           //ADD THIS CODE
                           setTimeout(function(){
                              document.getElementById("check").innerHTML="";
                           },3000);
                           if (response.Success=="Your message has been sent.") {
                              document.getElementById("aa").click();
                           };
                        },
                        error: function() {
                        }
                     })
            });
         });
      </script>
   </head>
   <body>
      <div class="container">
         <div class="card">
            <h3>CONTACT US</h3>
            <form id="form3" method="post">
                  <div class="inputBox">
                     <input type="text" required="required" name="name">
                     <span>Nom et Prenom</span>
                  </div>

                  <div class="inputBox">
                     <input type="email" required="required" name="email">
                     <span>Adresse Mail</span>
                  </div>

                  <div class="inputBox">
                     <input type="number" required="required" name="number">
                     <span>Numero</span>
                  </div>

                  <div class="inputBox">
                     <textarea placeholder="Message" class="txt_area" type="text" name="message"></textarea>
                  </div>
            <button name="submitDetails">Send</button>
         </form>
         <p class="txt">Si vous avez terminé, retourner à la page <a href="/">D'accueil</a></p>
         </div>
      </div>
   </body>
</html>